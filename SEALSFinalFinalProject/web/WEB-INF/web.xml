<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <servlet>
        <display-name>FilmController</display-name>
        <servlet-name>FilmController</servlet-name>
        <servlet-class>com.SEALS.film.FilmController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>FilmController</servlet-name>
        <url-pattern>/FilmController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>loginPage.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <description/>
        <display-name>AdminController</display-name>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.SEALS.admin.AdminController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>loginController</display-name>
        <servlet-name>loginController</servlet-name>
        <servlet-class>com.SEALS.login.loginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
</web-app>
